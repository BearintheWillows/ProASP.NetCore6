@model Product
@{ Layout = "_SimpleLayout"; }
<h5 class="bg-primary text-white text-center p-2">HTML Form</h5>
<form asp-action="SubmitForm" method="post" id="htmlform">
    
    <div class="form-group">
        <label asp-for="ProductId">Id</label>
        <input asp-for="ProductId" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name" value="@Model?.Name"/>
    </div>
    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" asp-format="{0:#,###.00}" class="form-control">
    </div>
    <div class="form-group">
        @* ReSharper disable once CSharpWarnings::CS8602 *@
        <label asp-for="Category.Name">Category</label>
        <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.Categories">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Supplier.Name">Supplier</label>
        <textarea asp-for="Supplier.Name" class="form-control"></textarea>
        @* ReSharper disable once CSharpWarnings::CS8602 *@
    </div>

</form>


<button form="htmlform" asp-action="SubmitForm" class="btn btn-primary mt-2">Submit (Outside Form)</button>
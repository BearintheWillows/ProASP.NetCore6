@model GetAPet.Models.Pet

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Name
            <span class="badge rounded-pill bg-primary text-white" style="float:right">
                <small>@Model.Price.ToString("C")</small>
            </span>
        </h4>
    </div>
    <div class="card-text p-1">Breed: @Model.Breed</div>
    <div class="card-text p-1">Colour: @Model.Color</div>
    <div class="card-text p-1">Notes: @Model.Notes</div>
    <div class="card-text p-1">@Model.Id</div>


<form id="@Model?.Id" asp-page="/Donate" method="post">
    <input type="hidden" asp-for="@Model.Id"/>
    <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>
    <span class="card-text p-1">
        @Model?.Notes
        <button type="submit" class="btn btn-success btn-sm pull-right" style="float:right">
            Donate
        </button>
    </span>
</form>
</div>